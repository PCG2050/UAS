<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UAS.Views.KVK.Page28"
             Title="Krishi Vigyan Kendra(KVK)">
    <ScrollView>
        <StackLayout>
            <Label Text="28. Publications :" FontSize="Medium" FontAttributes="Bold" Margin="5,0,0,0"/>
            <Border BackgroundColor="White" Stroke="Black" StrokeThickness="2" Margin="7">
                <StackLayout Padding="10">


                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
ColumnDefinitions="Auto,*" ColumnSpacing="10" RowSpacing="10">



                        <Label x:Name="typeOfPublicationLabel" Grid.Row="0" Text="Type of the publication" VerticalOptions="Center"/>
                        <Entry Grid.Row="0" Grid.Column="1" Placeholder="Enter Type" />

                        <Label x:Name="titleOfPublicationLabel" Grid.Row="1" Text="Title of the publication" VerticalOptions="Center"/>
                        <Entry Grid.Row="1" Grid.Column="1" Placeholder="Enter Title" />

                        <Label x:Name="authorsLabel" Grid.Row="2" Text="Authors" VerticalOptions="Center"/>
                        <Entry Grid.Row="2" Grid.Column="1" Placeholder="Enter Name" />

                        <Label x:Name="newsPaperLabel" Grid.Row="3" Text="News Paper/ Periodicals/ Journals/ Publisher(if applicable)" VerticalOptions="Center"/>
                        <Entry Grid.Row="3" Grid.Column="1" Placeholder="Enter Name" />

                        <Label x:Name="dateLabel" Grid.Row="4" Text="Date/Vol.No/page no/(if applicable)" VerticalOptions="Center"/>
                        <Entry Grid.Row="4" Grid.Column="1" Placeholder="Enter Text" />
                    </Grid>
                </StackLayout>
            </Border>
            <Label Text="*Booklets,books,phomplets,leaf lets,folders,training/lab manuals,research paper,etc.," FontSize="Small" FontAttributes="Bold" HorizontalOptions="Center" Margin="5,0,0,0"/>

            <Grid>
                <Button Text="&lt; Previous" HorizontalOptions="Start"  Margin="10,0,0,0"/>
                <Button Text="Submit" HorizontalOptions="Center" WidthRequest="80" />
                <Button Text="Next >" HorizontalOptions="End" WidthRequest="80" Margin="0,0,10,0"/>
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>