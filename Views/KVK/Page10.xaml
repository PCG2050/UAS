<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UAS.Views.KVK.Page10"
             Title="Krishi Vigyan Kendra(KVK)">
    <ScrollView>
        <StackLayout>
            <Label Text="10. News coverage :" FontSize="Medium" FontAttributes="Bold" Margin="5,0,0,0"/>
            <Border BackgroundColor="White" Stroke="Black" StrokeThickness="2" Margin="7">
                <StackLayout Padding="10">


                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
  ColumnDefinitions="Auto,*" ColumnSpacing="10" RowSpacing="10">
                        <Label Grid.Row="0" Text="Date" VerticalOptions="Center"/>
                        <DatePicker Grid.Row="0" Grid.Column="1"  />

                        <Label Grid.Row="1" Text="News paper" VerticalOptions="Center"/>
                        <Entry Grid.Row="1" Grid.Column="1" Placeholder="Enter Text"/>

                        <Label Grid.Row="2" Text="Related to OFD/FLD/Trg/others" VerticalOptions="Center"/>
                        <Entry Grid.Row="2" Grid.Column="1" Placeholder="Enter Text" />

                        <Label Grid.Row="3" Text="Title" VerticalOptions="Center"/>
                        <Entry Grid.Row="3" Grid.Column="1" Placeholder="Enter Title" />

                    </Grid>
                </StackLayout>
            </Border>
            <HorizontalStackLayout  Spacing="60" Margin="80,10,0,0">
                <Button Text="ADD Title" HorizontalOptions="Start" Clicked="Button_Clicked"/>
                <Button Text="Next Page >"  HorizontalOptions="End" Clicked="Button_Clicked"/>
            </HorizontalStackLayout>
        </StackLayout>
    </ScrollView>

</ContentPage>