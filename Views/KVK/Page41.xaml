<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UAS.Views.KVK.Page41"
             Title="Krishi Vigyan Kendra(KVK)">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="41. Action taken for Scientific Advisory Committee Recommendations :" FontSize="Medium" FontAttributes="Bold" Margin="5,0,0,0"/>
                <Border BackgroundColor="White" Stroke="Black" StrokeThickness="2" Margin="7">
                    <StackLayout Padding="10">


                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
ColumnDefinitions="Auto,*" ColumnSpacing="10" RowSpacing="10">


                            <Label Grid.Row="0" Text="Date" VerticalOptions="Center"/>
                            <DatePicker Grid.Row="0" Grid.Column="1" />

                            <Label Grid.Row="1" Text="Recommendation" VerticalOptions="Start" Margin="0,20,0,0"/>
                            <Editor Grid.Row="1" Grid.Column="1" Placeholder="Enter Recommendation" HeightRequest="150"  Margin="0,10,0,10" />


                            <Label Grid.Row="2" Text="Action Taken" VerticalOptions="Start" Margin="0,20,0,0"/>
                            <Editor Grid.Row="2" Grid.Column="1" Placeholder="Enter Action Taken" HeightRequest="150"  Margin="0,10,0,10" />

                        </Grid>
                    </StackLayout>
                </Border>
                <Grid>
                    <Button Text="&lt; Previous" HorizontalOptions="Start"  Margin="10,0,0,0"/>
                    <Button Text="Submit" HorizontalOptions="Center" WidthRequest="80" />
                    <Button Text="Next >" HorizontalOptions="End" WidthRequest="80" Margin="0,0,10,0"/>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>