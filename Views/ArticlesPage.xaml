<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:UAS.ViewModels"
             x:Class="UAS.Views.ArticlesPage"
             Title="Articles"
             BackgroundColor="White">

    <ContentPage.BindingContext>
        <local:ArticlesPageViewModel />
    </ContentPage.BindingContext>

    <ScrollView VerticalOptions="FillAndExpand">
        <StackLayout VerticalOptions="FillAndExpand" Padding="10" Spacing="10">
            <Label Text="Select a Page to Navigate"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   FontSize="Medium"
                   TextColor="Black"
                   Margin="0,20,0,10" />

            <CollectionView ItemsSource="{Binding PageList}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedPage}"
                            SelectionChanged="OnSelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="LightGray"
                                StrokeThickness="1"
                                Padding="10"
                                Margin="0,5"
                                BackgroundColor="White">
                            <Label Text="{Binding .}"
                                   FontSize="Large"
                                   TextColor="DarkSlateGray"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start" />
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>

</ContentPage>
